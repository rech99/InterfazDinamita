            <ComboBoxItem>Maestro</ComboBoxItem>

        </ComboBox>
        <Button Content="Agregar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="101" Margin="575,56,0,0" Height="29" Click="Button_Click"/>
        <Grid x:Name="grdParametros" HorizontalAlignment="Left" Height="237" VerticalAlignment="Top" Width="772" Margin="10,116,0,0"/>
        <Button x:Name="Guardar" Content="Guardar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="554,370,0,0" Click="Guardar_Click"/>
        <Button x:Name="Cerrar" Content="Cerrar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="660,370,0,0" Click="Cerrar_Click"/>

    </Grid>
</Window>
